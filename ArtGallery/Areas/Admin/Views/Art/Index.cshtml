@model List<Art>

<div class="container">
	<div class="row pt-4 pb-2">
		<div class="col-6">
			<h2 class="text-primary">
				Cateogry List
			</h2>
		</div>
		<div class="col-6 text-end">
			<a class="" asp-controller="Art" asp-action="Upsert" class="btn btn-primary">
			<i class="bi bi-plus-circle"></i> Create new Art
			</a>
		</div>
	</div>

	<table id="tblData" class="table table-bordered table-striped p-2" width="100%">
		<thead>
			<th>
				Art Title
			</th>
			<th>
				Artist Name
			</th>
			<th >
				Description
			</th>
			<th>
				Category
			</th>
			<th class="text-center">
				Manage Art
			</th>
		</thead>

	</table>

</div>

@section Scripts
{
	<script src="~/js/Art.js"></script>
}